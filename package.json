{
  "name": "@madebyconnor/rich-text-to-jsx",
  "version": "2.3.0",
  "description": "Opinionated JSX renderer for the Contentful rich text field type.",
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "jsnext:main": "dist/index.esm.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.js",
  "files": ["dist"],
  "repository": "https://github.com/connor-baer/rich-text-to-jsx.git",
  "author": "(Connor BÃ¤r <oss@connorbaer.com>)",
  "license": "MIT",
  "scripts": {
    "start": "rollup --config --watch",
    "build": "rollup --config",
    "create:component": "foundry run plop component",
    "lint": "foundry run eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "lint:ci": "npm run lint -- --format junit -o __reports__/eslint-results.xml",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand --ci",
    "size": "size-limit",
    "prerelease": "npm run build && npm run size",
    "release": "changeset publish"
  },
  "size-limit": [
    {
      "path": "dist/index.cjs.js",
      "limit": "5.2 kB"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@sumup-oss/foundry": "^9.0.2",
    "@testing-library/react": "^16.3.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^30.1.2",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-testing-library": "^7.11.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.1.2",
    "jest-junit": "^16.0.0",
    "prop-types": "^15.6.2",
    "react": "^19.0.0",
    "react-dom": "^19.1.0",
    "regenerator-runtime": "^0.14.1",
    "rollup": "^2.79.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "size-limit": "^11.2.0"
  },
  "peerDependencies": {
    "prop-types": ">= 15",
    "react": ">= 16.0.0"
  },
  "dependencies": {
    "@contentful/rich-text-types": "^17.2.4"
  }
}
