{
  "name": "@madebyconnor/rich-text-to-jsx",
  "version": "0.0.0-semantically-released",
  "description": "Opinionated JSX renderer for the Contentful rich text field type.",
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "jsnext:main": "dist/index.esm.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/connor-baer/rich-text-to-jsx.git",
  "author": "(Connor BÃ¤r <oss@connorbaer.com>)",
  "license": "MIT",
  "scripts": {
    "start": "rollup --config --watch",
    "build": "rollup --config",
    "create:component": "foundry run plop component",
    "lint": "foundry run eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "lint:ci": "yarn lint --format junit -o __reports__/eslint-results.xml",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand --ci",
    "size": "size-limit",
    "prerelease": "yarn build && yarn size",
    "release": "semantic-release"
  },
  "size-limit": [
    {
      "path": "dist/index.cjs.js",
      "limit": "4.1 kB"
    }
  ],
  "jest": {
    "snapshotSerializers": [
      "jest-serializer-html"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@sumup/foundry": "^5.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^28.1.0",
    "jest": "^28.1.0",
    "jest-junit": "^13.2.0",
    "jest-serializer-html": "^7.1.0",
    "prop-types": "^15.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-test-renderer": "^18.1.0",
    "regenerator-runtime": "^0.13.1",
    "rollup": "^2.72.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "size-limit": "^0.21.1"
  },
  "peerDependencies": {
    "react": ">= 16.0.0"
  },
  "dependencies": {
    "@contentful/rich-text-types": "^15.12.1"
  }
}
